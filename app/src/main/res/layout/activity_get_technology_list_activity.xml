<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Type:" />

        <RadioGroup
            android:id="@+id/radio_group_question_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            >

            <RadioButton
                android:id="@+id/radio_technocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Technical"
                android:layout_marginRight="10dp"
                />

            <RadioButton
                android:id="@+id/radio_non_technical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non Technical"
                android:layout_marginLeft="10dp"
                />
        </RadioGroup>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please select Technology for exam:"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/spinner_technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_layout"
            android:enabled="false"
            android:text="Next"
            android:textColor="#fff" />

    </LinearLayout>

</RelativeLayout>
