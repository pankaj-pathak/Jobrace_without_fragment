<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_resume_builder_activity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="16dp"
        >

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:maxLines="1"
            android:hint="Email"
            android:enabled="false"
            android:textColorHint="#b3b3b3"
            android:inputType="textWebEmailAddress"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Full Name"
            android:textColorHint="#b3b3b3"
            android:lines="1"
            android:inputType="text"
            android:textSize="@dimen/small_text_size"
            />
        <EditText
            android:id="@+id/et_phone"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:hint="Phone"
            android:maxLines="1"
            android:maxLength="10"
            android:textColorHint="#b3b3b3"
            android:inputType="number"
            />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:textColor="#808080"
            android:textSize="@dimen/normal_text_size"
            />
        <EditText
            android:id="@+id/et_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="10"
            android:hint="Enter your profile summary here"
            android:layout_marginBottom="10dp"
            android:textColorHint="#b3b3b3"
            android:textSize="@dimen/small_text_size"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Educational detail"
            android:textColor="#808080"
            android:textSize="@dimen/normal_text_size"
            />
        <EditText
            android:id="@+id/et_educational_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:maxLines="50"
            android:hint="Enter your educational detail here"
            android:textColorHint="#b3b3b3"
            android:inputType="text"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Certification:"
            android:textColor="#808080"
            android:textSize="@dimen/normal_text_size"
            />
        <EditText
            android:id="@+id/et_certification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:hint="Enter your certification detail here"
            android:maxLines="50"
            android:textColorHint="#b3b3b3"
            android:inputType="text"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Projects"
            android:textSize="@dimen/normal_text_size"
            android:textColor="#808080"
            />
        <EditText
            android:id="@+id/et_projects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:maxLines="100"
            android:hint="Enter your project detail here"
            android:textColorHint="#b3b3b3"
            android:inputType="text"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Experience"
            android:textSize="@dimen/normal_text_size"
            android:textColor="#808080"
            />
        <EditText
            android:id="@+id/et_work_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:maxLines="100"
            android:hint="Enter your work experience here"
            android:textColorHint="#b3b3b3"
            android:inputType="text"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Details"
            android:textSize="@dimen/normal_text_size"
            android:textColor="#808080"
            />
        <EditText
            android:id="@+id/et_other_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:maxLines="100"
            android:hint="Enter other details about you here"
            android:textColorHint="#b3b3b3"
            android:inputType="text"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:textSize="@dimen/normal_text_size"
            android:textColor="#808080"
            />
        <EditText
            android:id="@+id/et_personal_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:maxLines="100"
            android:hint="Enter your personal details here"
            android:textColorHint="#b3b3b3"
            android:inputType="text"
            />
        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:enabled="false"
            android:textColor="#fff"
            android:background="@drawable/button_layout"
            android:layout_marginBottom="16dp"
            />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
