<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true"
        >
        <shape>
            <solid
                android:color="@android:color/transparent"
                />
            <stroke
                android:width="1dp"
                android:color="#000" />
            <corners
                android:radius="10dp"
                />
        </shape>
    </item>
    <item
        >
        <shape>
            <solid
                android:color="#D3D3D3"
                />
            <stroke
                android:width="1dp"
                android:color="#000" />
            <corners
                android:radius="10dp"
                />
        </shape>
    </item>
</selector>