<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pankaj.jobrace_without_fragment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/jobrace_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNew">
        <activity
            android:name=".Homepage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View_job_details_activity"
            android:parentActivityName=".Homepage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Registeration"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Forgot_password"
            android:screenOrientation="portrait" />

        <service android:name=".services.Download_apk_service" />

        <activity
            android:name=".PerformanceDetailActivity"
            android:parentActivityName=".Homepage"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Online_test"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Check_required_detail_first_activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Get_permissions_activity" />
        <activity
            android:name=".Virtual_interview_start_page"
            android:parentActivityName=".View_job_details_activity" />
        <activity
            android:name=".My_job_list_activity"
            android:parentActivityName=".Homepage" />
        <activity
            android:name=".Get_technology_list_activity"
            android:parentActivityName=".Homepage" />
        <activity
            android:name=".Online_test_start_page"
            android:parentActivityName=".Get_technology_list_activity" />
        <activity
            android:name=".Setting_activity"
            android:parentActivityName=".Homepage" />
        <activity
            android:name=".Result_activity"
            android:parentActivityName=".Homepage" />
        <activity
            android:name=".Todays_interview"
            android:parentActivityName=".Homepage"></activity>
        <activity
            android:name=".Resume_builder_activity"
            android:label="@string/title_activity_resume_builder_activity"
            android:parentActivityName=".Homepage"
            ></activity>
    </application>

</manifest>